                            android:layout_columnWeight="1"
                            android:layout_margin="15dp"
                            android:gravity="center"
                            android:text="Olho Esquerdo Horizontal" />

                        <SeekBar
                            android:id="@+id/olhoEsquerdoHorizontalSeekBar"
