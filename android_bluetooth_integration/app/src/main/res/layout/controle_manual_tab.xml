                            android:layout_marginBottom="15dp"
                            android:gravity="center"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="15dp"
                            android:gravity="center"
                            android:text="Sobrancelha Interior Direita" />

                        <SeekBar
                            android:id="@+id/sobrancelhaInteriorDireitaSeekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal|center"
                            android:layout_margin="15dp"
                            android:max="180" />

                        <TextView
                            android:id="@+id/sobrancelhaInteriorDireitaTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginBottom="15dp"
                            android:gravity="center"
                            android:text="0" />
                    </LinearLayout>
                </TableRow>


                <TableRow>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="15dp"
                            android:gravity="center"
                            android:text="Olho Esquerdo Vertical" />

                        <SeekBar
                            android:id="@+id/olhoEsquerdoVerticalSeekBar"
                            android:layout_width="match_parent"
