<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/cadastro_senha"
        android:hint="Digite sua senha:"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/cadastro_email"
        android:layout_alignStart="@+id/cadastro_email" />


   <!-- <include android:id="@+id/toolbar"
       layout="@layout/activity_hello">
   </include> -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cadastro_email"
        android:hint="Digite seu e-mail:"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/cadastro_nome"
        android:layout_alignStart="@+id/cadastro_nome" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginStart="18dp"
        android:id="@+id/cadastro_nome"
        android:hint="Digite seu nome:"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/usuario3"
        android:id="@+id/imageView2"
        android:layout_marginEnd="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp" />

    <Button
        android:text="CADASTRAR"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonValidate"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/cadastro_senha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>