<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000">

    <TextView
        android:layout_width="344dp"
        android:layout_height="0dp"
        android:id="@+id/titulo"
        android:text="Termos de Compra"
        android:textStyle="bold"
        android:textAlignment="center"
        android:elevation="10dp"
        android:textSize="20dp"
        android:textColor="@color/colorBackground"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/texto_termos"
        android:layout_width="395dp"
        android:elevation="10dp"
        android:layout_height="412dp"
        android:textSize="20dp"
        android:background="@drawable/logo_big_opac"
        android:layout_marginBottom="8dp"
        android:textColor="@color/md_black_1000"
        app:layout_constraintBottom_toTopOf="@+id/aceite_termos"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.0" />


    <Button
        android:id="@+id/aceite_termos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/md_white_1000"
        android:text="aceitar"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="47dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/texto_termos"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/texto_termos"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.865" />

    <Button
        android:id="@+id/recuse_termos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/md_white_1000"
        android:text="RECUSAR"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="47dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/texto_termos"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/texto_termos"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.216" />

</android.support.constraint.ConstraintLayout>