<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/create_pedido_name"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignEnd="@+id/create_group_description"
        android:layout_alignRight="@+id/create_group_description"
        android:layout_below="@+id/toolbar_create_group"
        android:hint="O que voce quer doar?"
        android:maxLength="17"
        android:textColorHint="@color/md_grey_300"
        android:textAlignment="viewStart"
        android:textColor="@color/md_grey_300"
        android:textSize="25sp"
        android:elevation="22dp"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_create_group"
        android:layout_width="1962dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:elevation="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorBackground"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@+id/imageView8"
        app:titleTextColor="@android:color/white"
        tools:layout_editor_absoluteY="-8dp">
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/create_pedido_description"
        android:layout_width="310dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="top"
        android:layout_below="@+id/imageView8"
        android:layout_marginStart="8dp"
        android:hint="Escreva aqui os detalhes da sua \ndoação"
        android:textAlignment="textStart"
        android:textColor="@color/md_black_1000"
        android:textSize="15dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.384"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/create_pedido_button"
        android:layout_width="415dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorBackground"
        android:text="PRONTO PARA DOAR"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="PRONTO PARA DOAR"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintHorizontal_bias="0.833" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/pedidos_icon"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/textView6"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        android:layout_marginBottom="-14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descriçao"
        android:textSize="20dp"
        android:id="@+id/textView6"
        android:layout_marginStart="72dp"
        app:layout_constraintRight_toLeftOf="@+id/create_pedido_name"
        android:layout_marginLeft="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/import_donation_img"
        android:layout_marginRight="8dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="62dp"
        android:src="@drawable/qtd_icon"
        android:id="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar"
        android:layout_marginBottom="11dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView11"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/create_pedido_description"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="0dp" />
<TextView
    android:layout_width="254dp"
    android:layout_height="wrap_content"
    android:hint="Quantidade a ser doado"
    android:textColor="@color/ColorGrey"
    app:layout_constraintRight_toRightOf="@+id/seekBar"
    android:layout_marginBottom="8dp"
    android:textSize="20dp"
    app:layout_constraintVertical_bias="0.466"
    android:id="@+id/textView18"
    app:layout_constraintTop_toTopOf="@+id/imageView"
    app:layout_constraintBottom_toBottomOf="@+id/imageView"
    app:layout_constraintLeft_toRightOf="@+id/imageView"
    app:layout_constraintHorizontal_bias="0.0"
    android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/seekbar_value"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_marginRight="7dp"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="0"
        app:layout_constraintLeft_toRightOf="@+id/seekBar"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintTop_toTopOf="@+id/seekBar"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="7dp" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="212dp"
        android:thumb="@drawable/seekbar_bg"
        android:layout_height="51dp"
        android:max="100"
        android:progress="3"
        android:layout_marginRight="119dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView18"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="119dp" />

    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/tagGroupGrupos"
        android:layout_width="290dp"
        android:background="@drawable/trans"
        android:layout_height="47dp"
        app:tag_enable_cross="true"
        android:layout_below="@+id/word_add_tags"
        app:tag_background_color="@color/colorBackground"
        app:tag_cross_color="@android:color/white"
        app:atg_backgroundColor="@color/colorBackground"
        app:atg_textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/create_pedido_button"
        app:tag_text_size="25dp"
        app:tag_text_color="@android:color/white"
        app:tag_theme="none"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="21dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView10"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"></co.lujun.androidtagview.TagContainerLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/imageView8"
        android:layout_width="108dp"
        android:layout_height="98dp"
        android:layout_below="@+id/toolbar_create_group"
        android:layout_marginEnd="1539dp"
        android:layout_marginRight="1539dp"
        android:background="@color/colorBackground"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/colorBackground"
        app:cardElevation="20dp"
        app:layout_constraintRight_toRightOf="@+id/toolbar_create_group"
        app:srcCompat="@color/colorBackground"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp" />


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/import_donation_img"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/add_group_logo"
        app:civ_border_color="@color/md_white_1000"
        app:civ_border_width="2dp"
        android:layout_below="@+id/toolbar_create_group"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/create_pedido_button"
        app:layout_constraintVertical_bias="0.042" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="179dp"
        android:layout_height="22dp"
        android:layout_alignLeft="@+id/import_donation_img"
        android:layout_alignStart="@+id/import_donation_img"
        android:layout_below="@+id/import_donation_img"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="Insira uma foto"
        android:textAlignment="textStart"
        android:textSize="12dp"
        android:translationX="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/import_donation_img"
        app:layout_constraintRight_toRightOf="@+id/import_donation_img"
        app:layout_constraintTop_toBottomOf="@+id/import_donation_img"
        app:layout_constraintHorizontal_bias="0.406" />


</android.support.constraint.ConstraintLayout>