<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="423dp"
        android:layout_height="79dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar_create_group"
        app:srcCompat="@color/colorBackground"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_create_group"
        android:layout_marginRight="1539dp"
        app:layout_constraintRight_toRightOf="@+id/toolbar_create_group"
        tools:layout_editor_absoluteX="-15dp" />


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_create_group"
        android:layout_width="408dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorBackground"
        android:visibility="visible"
        app:titleTextColor="@android:color/white"
        tools:layout_editor_absoluteY="-1dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView8"></android.support.v7.widget.Toolbar>

    <me.gujun.android.taggroup.TagGroup
        android:layout_width="293dp"
        android:layout_height="46dp"
        android:layout_below="@+id/textView6"
        android:id="@+id/tagGroupCategoria"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="75dp"
        app:atg_backgroundColor="@color/colorBackground"
        app:atg_textColor="@android:color/white"
        app:atg_textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/create_pedido_description"></me.gujun.android.taggroup.TagGroup>

    <me.gujun.android.taggroup.TagGroup
        android:id="@+id/tagGroupGrupos"
        android:layout_width="290dp"
        android:layout_height="47dp"
        android:layout_below="@+id/textView6"
        tools:ignore="MissingConstraints"
        app:atg_backgroundColor="@color/colorBackground"
        app:atg_textColor="@android:color/white"
        app:atg_textSize="15dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/create_pedido_button"
        android:layout_marginLeft="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tagGroupCategoria"
        app:layout_constraintVertical_bias="0.7"></me.gujun.android.taggroup.TagGroup>

    <EditText
        android:id="@+id/create_pedido_name"
        android:layout_width="350dp"
        android:layout_height="74dp"
        android:layout_alignEnd="@+id/create_group_description"
        android:layout_alignRight="@+id/create_group_description"
        android:layout_below="@+id/toolbar_create_group"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:hint="Nome do Pedido"
        android:textAlignment="viewStart"
        android:textColor="@color/personalTextColor"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_create_group" />


    <EditText
        android:id="@+id/create_pedido_description"
        android:layout_width="307dp"
        android:layout_height="173dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:layout_below="@+id/imageView8"
        android:hint="Descricao do pedido"
        android:textAlignment="viewStart"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/create_pedido_name"
        app:layout_constraintLeft_toRightOf="@+id/imageView11"
        tools:layout_editor_absoluteX="67dp" />


    <Button
        android:id="@+id/create_pedido_button"
        android:layout_width="409dp"
        android:layout_height="66dp"
        android:text="CRIAR PEDIDO"
        android:background="@color/colorBackground"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="CRIAR PEDIDO"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-9dp"
        android:layout_marginRight="1dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create_group_description"
        android:layout_alignStart="@+id/create_group_description"
        android:layout_below="@+id/create_group_description"
        android:text="Categorias"
        android:textAlignment="viewStart"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tagGroupCategoria"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView12"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/create_pedido_description"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView00"
        android:layout_width="67dp"
        android:textSize="20dp"
        android:layout_height="28dp"
        android:layout_alignLeft="@+id/create_group_description"
        android:layout_alignStart="@+id/create_group_description"
        android:layout_below="@+id/create_group_description"
        android:text="Grupos"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView10"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tagGroupCategoria"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tagGroupGrupos"
        app:layout_constraintVertical_bias="0.526" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="32dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/groups_icon"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView00"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView12"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="34dp"
        android:layout_height="38dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@drawable/label_icon"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="-8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="30dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/pedidos_icon"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView12"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.75" />

    <ImageButton
        android:id="@+id/add_tag_button"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tagGroupCategoria"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/create_pedido_description"
        app:layout_constraintVertical_bias="0.851"
        app:srcCompat="@mipmap/circle_add_button"/>

    <ImageButton
        android:id="@+id/addGroup_tag_button"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:srcCompat="@mipmap/circle_add_button"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@+id/textView00"
        android:layout_marginLeft="-8dp"
        app:layout_constraintTop_toBottomOf="@+id/tagGroupCategoria"
        android:layout_marginTop="28dp" />


</android.support.constraint.ConstraintLayout>