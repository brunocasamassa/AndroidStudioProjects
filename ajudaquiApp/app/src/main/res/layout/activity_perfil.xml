<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_principal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBackground"
        app:titleTextColor="@android:color/black"></android.support.v7.widget.Toolbar>


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImg"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:layout_below="@+id/toolbar_principal"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginTop="19dp" />



    <TextView
        android:id="@+id/textView5"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/perfilPontosConquistados"
        android:layout_marginStart="19dp"
        android:text="  pontos conquistados  "
        android:textAlignment="center"
        android:textSize="10sp"
        tools:text="  pontos conquistados" />

    <TextView
        android:id="@+id/perfilPontosConquistados"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationY="20dp"
        android:typeface="monospace"
        tools:text="0"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/profileName"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="  pedidos atendidos  "
        android:textAlignment="center"
        android:textSize="10sp"
        tools:text="  pedidos atendidos"
        android:layout_below="@+id/perfilPedidosAtendidos"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="     pedidos    feitos  "
        android:textAlignment="center"
        android:textSize="10sp"
        tools:text="     pedidos    feitos"
        android:layout_below="@+id/perfilPedidosFeitos"
        android:layout_alignEnd="@+id/perfilPedidosFeitos" />

    <TextView
        android:id="@+id/perfilPedidosAtendidos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationY="20dp"
        android:typeface="monospace"
        tools:text="0"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/perfilPedidosFeitos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationY="20dp"
        android:typeface="monospace"
        tools:text="0"
        android:layout_above="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="38dp" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImg"
        android:text="Android User"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Android User" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/free_icon"
        android:layout_below="@+id/profileName"
        android:layout_centerHorizontal="true" />

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="12dp">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/premiumButton"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/perfilPedidosFeitos"
        android:layout_alignLeft="@+id/perfilPedidosFeitos"
        android:layout_alignRight="@+id/perfilPedidosFeitos"
        android:layout_alignStart="@+id/perfilPedidosFeitos"
        android:layout_alignTop="@+id/profileImg"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@android:drawable/ic_notification_overlay" />


</RelativeLayout>

