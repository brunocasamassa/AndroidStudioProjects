<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolar_create_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorBackground"
        android:visibility="visible"
        app:titleTextColor="@android:color/black"></android.support.v7.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/import_group_img"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_below="@+id/toolar_create_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:src="@mipmap/ic_launcher_round"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="Insira uma foto"
        android:layout_below="@+id/import_group_img"
        android:layout_alignLeft="@+id/import_group_img"
        android:layout_alignStart="@+id/import_group_img"
        android:id="@+id/textView4" />

    <EditText
        android:id="@+id/create_group_name"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView4"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="71dp"
        android:hint="Nome do Grupo" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/lock_black"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignTop="@+id/editText"
        android:layout_toLeftOf="@+id/editText"
        android:layout_toStartOf="@+id/editText"
        android:id="@+id/imageView3" />


    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@+id/create_group_name"
        android:layout_alignLeft="@+id/create_group_name"
        android:layout_alignStart="@+id/create_group_name"
        android:layout_marginTop="55dp"
        android:hint=""
        android:id="@+id/editText"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/add_groups"
        android:layout_alignTop="@+id/create_group_name"
        android:layout_toLeftOf="@+id/create_group_name"
        android:layout_toStartOf="@+id/create_group_name" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignEnd="@+id/create_group_name"
        android:layout_alignRight="@+id/create_group_name"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="450dp"
        android:layout_height="60dp"
        app:srcCompat="@color/colorBackground"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="CRIAR GRUPO"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="CRIAR GRUPO" />


</RelativeLayout>