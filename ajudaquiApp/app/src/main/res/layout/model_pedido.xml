<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="175dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="1dp">

        <!--///////////////////////////////////////////////////////////////////////////////////////-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <me.gujun.android.taggroup.TagGroup
                android:id="@+id/tagPedidos"
                android:layout_width="236dp"
                android:layout_height="41dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                app:atg_backgroundColor="@color/md_white_1000"
                app:atg_textColor="@android:color/darker_gray"
                app:atg_textSize="18dp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagePedido"
                android:layout_width="57dp"
                android:layout_height="61dp"
                android:layout_above="@+id/descricao_pedido"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nomePedido" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="330dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="8dp"
                android:text="0m"
                android:textAlignment="center"
                android:textColor="@color/ColorGrey"
                app:layout_constraintBottom_toBottomOf="@+id/nomePedido"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/nomePedido"
                app:layout_constraintVertical_bias="0.25"
                tools:text="0m" />

            <!--///////////////////////////////////////////////////////////////////////////////////////-->

            <TextView
                android:id="@+id/qtd_pedido"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/distance"
                android:layout_alignStart="@+id/distance"
                android:layout_centerVertical="true"
                android:text="50/87"
                android:textAlignment="center"
                android:textColor="@color/ColorGrey"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/descricao_pedido"
                app:layout_constraintLeft_toRightOf="@+id/descricao_pedido"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/distance"
                app:layout_constraintVertical_bias="0.0"
                tools:text="50/88" />

            <TextView
                android:id="@+id/nomePedido"
                android:layout_width="252dp"
                android:layout_height="44dp"
                android:layout_gravity="top"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="0dp"
                android:maxLength="18"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:text="Name"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:translationX="5dp" />

            <TextView
                android:id="@+id/descricao_pedido"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"
                android:maxLength="20"
                android:paddingTop="8dp"
                android:text="description ofefef"
                android:textColor="@color/md_grey_900"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/imagePedido"
                android:layout_alignStart="@+id/imagePedido" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

