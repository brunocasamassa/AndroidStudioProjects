<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="165dp"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="403dp"
        android:layout_height="161dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <me.gujun.android.taggroup.TagGroup
            android:id="@+id/tagPedidos"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:textAlignment="viewEnd"
            app:atg_backgroundColor="@color/colorBackground"
            app:atg_textColor="@android:color/white"
            app:atg_textSize="18dp"></me.gujun.android.taggroup.TagGroup>

        <TextView
            android:id="@+id/nomePedido"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="top"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descricao_pedido"
            android:layout_width="fill_parent"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="description ofefef"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>

