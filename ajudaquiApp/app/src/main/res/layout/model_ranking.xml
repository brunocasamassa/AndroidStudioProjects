<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_color="@color/ColorGrey"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/circleImageView2"
        android:layout_alignTop="@+id/ranking_name" />

    <TextView
        android:id="@+id/ranked_place"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:elevation="20dp"
        android:text="0"
        android:textSize="23dp"
        android:textAlignment="center"
        android:translationY="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignBaseline="@+id/ranking_points"
        android:layout_alignBottom="@+id/ranking_points"
        android:layout_toLeftOf="@+id/ranking_name"
        android:layout_toStartOf="@+id/ranking_name"></TextView>


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/ranking_name"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/circleImageView2"
        android:layout_toEndOf="@+id/circleImageView2" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:translationY="10dp"
        android:textColor="@color/colorBackground"
        android:id="@+id/ranking_points"
        android:layout_alignBaseline="@+id/ranking_name"
        android:layout_alignBottom="@+id/ranking_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    
    

</RelativeLayout>

