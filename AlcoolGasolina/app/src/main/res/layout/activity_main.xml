<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="alcoolgasolina.studio.brunocasamassa.alcoolgasolina.MainActivity">

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/gasosa_id"
        style="@android:style/Widget.DeviceDefault.Light.AutoCompleteTextView"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        android:textAlignment="textStart"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/ok"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="0.00"
        android:textColorHint="@android:color/holo_green_light"
        tools:ignore="HardcodedText" />

    <Button
        android:text="VERIFY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ok"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/resposta"
        android:layout_toRightOf="@+id/gasosa_id"
        android:layout_toEndOf="@+id/gasosa_id"
        tools:ignore="HardcodedText" />


    <EditText
        android:layout_height="60dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/cana_id"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        android:textAlignment="viewStart"
        android:layout_width="75dp"
        android:layout_alignTop="@+id/gasosa_id"
        android:layout_toRightOf="@+id/ok"
        android:layout_toEndOf="@+id/ok"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:hint="0.00"
        android:textColorHint="@android:color/holo_green_light"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/resposta"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:text="Enter the values: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/holo_green_light"
        android:textSize="24sp"
        tools:ignore="HardcodedText"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/gasosa_id"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="ENL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enl"
        android:textSize="14sp"
        android:textColor="@android:color/holo_green_light"
        android:layout_alignBottom="@+id/cana_id"
        android:layout_alignRight="@+id/cana_id"
        android:layout_alignEnd="@+id/cana_id"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="GAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gas"
        android:textSize="14sp"
        android:textColor="@android:color/holo_green_light"
        android:layout_alignBottom="@+id/cana_id"
        android:layout_alignLeft="@+id/gasosa_id"
        android:layout_alignStart="@+id/gasosa_id"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Super Gas Calculator"
        android:layout_height="wrap_content"
        android:id="@+id/Title"
        android:textColor="@color/titlecolor"
        android:textSize="25sp"
        tools:ignore="HardcodedText"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:layout_width="430dp"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView"
        app:srcCompat="@drawable/logogasosaa"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="ContentDescription" />


</RelativeLayout>
