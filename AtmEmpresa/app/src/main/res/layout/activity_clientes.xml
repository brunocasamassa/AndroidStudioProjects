<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="400dp"
        app:srcCompat="@drawable/cliente1"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/detalhe_cliente"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="400dp"
        app:srcCompat="@drawable/cliente2"
        android:id="@+id/imageView4"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="Nossos clientes"
        android:id="@+id/textView"
        android:layout_height="50dp"
        tools:text="Nossos clientes"
        android:layout_width="250dp"
        android:textSize="25sp"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="normal|bold"
        android:layout_below="@+id/imageButton"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <ImageButton
        app:srcCompat="@drawable/home"
        android:id="@+id/imageButton"
        android:scaleType="fitCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription=""
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="ContentDescription" /><!--android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />-->
</RelativeLayout>