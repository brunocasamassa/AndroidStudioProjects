<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        app:srcCompat="@drawable/home"
        android:id="@+id/imageButton"
        android:scaleType="fitCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="2dp"
        tools:layout_conversion_absoluteWidth="50dp"
        tools:layout_conversion_absoluteHeight="50dp"
        tools:layout_editor_absoluteY="2dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:layout_width="150dp"
        app:srcCompat="@drawable/detalhe_servico"
        android:id="@+id/imageView"
        android:layout_height="150dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="52dp"
        tools:layout_conversion_absoluteWidth="150dp"
        tools:layout_conversion_absoluteHeight="150dp"
        tools:layout_editor_absoluteY="52dp"
        tools:layout_editor_absoluteX="10dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/textView4"
        tools:layout_editor_absoluteY="284dp"
        android:text="*Coaching Financeiro \n*Consultoria Financeira"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:text="Serviços"
        android:id="@+id/textView"
        android:layout_height="50dp"
        tools:text="Serviços"
        android:textSize="40sp"
        android:textColor="@color/servicoTitle"
        android:textStyle="normal|bold"
        android:layout_width="200dp"
        tools:layout_conversion_absoluteX="184dp"
        tools:layout_conversion_absoluteY="52dp"
        tools:layout_conversion_absoluteWidth="200dp"
        tools:layout_conversion_absoluteHeight="50dp"
        tools:layout_editor_absoluteY="52dp"
        tools:layout_editor_absoluteX="184dp"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <!--android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />-->
</RelativeLayout>