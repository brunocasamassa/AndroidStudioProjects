<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="alcoolgasolina.studio.brunocasamassa.atmempresa.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_cliente"
        android:id="@+id/clientes"
        android:layout_width="150dp"
        android:layout_alignTop="@+id/contato"
        android:layout_alignLeft="@+id/servicos"
        android:layout_alignStart="@+id/servicos" />

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_empresa"
        android:id="@+id/empresa"
        android:layout_width="150dp"
        android:layout_above="@+id/contato"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="33dp" />

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_servico"
        android:id="@+id/servicos"
        android:layout_width="150dp"
        android:layout_alignTop="@+id/empresa"
        android:layout_toRightOf="@+id/empresa"
        android:layout_toEndOf="@+id/empresa"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_contato"
        android:id="@+id/contato"
        android:layout_width="150dp"
        android:layout_marginBottom="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/empresa"
        android:layout_alignStart="@+id/empresa" />

    <TextView
        android:text="OlÃ¡"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:id="@+id/surfaceName" />
</RelativeLayout>
